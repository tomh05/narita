<p id="notice"><%= notice %></p>

<h1>Facebook Messages</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Message</th>
      <th>From</th>
      <th>Type</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facebook_messages.each do |facebook_message| %>
      <tr>
        <td><%= format_date facebook_message.fb_date %></td>
        <td><%= facebook_message.fb_content %></td>
        <td><%= facebook_message.fb_from %></td>
        <td><%= facebook_message.message_type %></td>
        <td><%= facebook_message.username %></td>
        <td><%= link_to 'Destroy', facebook_message, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
