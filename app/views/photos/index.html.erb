<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Url</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Date</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><a href='images/<%= photo.url %>'><%= photo.url %></a></td>
        <td><%= photo.photo_lat %></td>
        <td><%= photo.photo_long %></td>
        <td><%= format_date photo.photo_date %></td>
        <td><%= photo.username %></td>
        <td><img src ='images/<%= photo.url %>' width=100 height=100 /></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

