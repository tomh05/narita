<p id="notice"><%= notice %></p>

<h1>Sim events</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Sim event</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sims.each do |sim| %>
      <tr>
        <td><%= format_date sim.event_time %></td>
        <td><%= sim.event_type %></td>
        <td><%= sim.username %></td>
        <td><%= link_to 'Destroy', sim, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

