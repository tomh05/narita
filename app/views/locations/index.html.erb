<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>  
      <th>Time</th>
      <th>Lat</th>
      <th>Long</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= format_date location.event_time %></td>
        <% @map_url = get_map_url location.lat, location.long %>
        <td><%= link_to location.lat, @map_url, :target => "_blank" %></td>
        <td><%= link_to location.long, @map_url, :target => "_blank" %></td>
        <td><%= location.username %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>






