<p id="notice"><%= notice %></p>

<h1>Listing Screens</h1>

<table>
  <thead>
    <tr>
      <th>Event time</th>
      <th>Event type</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screens.each do |screen| %>
      <tr>
        <td><%= screen.event_time %></td>
        <td><%= screen.event_type %></td>
        <td><%= screen.username %></td>
        <td><%= link_to 'Show', screen %></td>
        <td><%= link_to 'Edit', edit_screen_path(screen) %></td>
        <td><%= link_to 'Destroy', screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

